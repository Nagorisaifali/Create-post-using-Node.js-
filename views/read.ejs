<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/style.css">
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    
    <div class="w-full text-white h-full bg-zinc-900 p-10 ">
        <a class="text-blue-500 mt-10 mb-10" href="/">Back to Home</a>
        <h1 class="text-3xl tracking-tighter mb-4 mt-8">All Users</h1>
        <div class="users flex gap-3">

            <% if(users.length > 0){ %>

                <% users.forEach(function(user){ %>
                    <div class="user w-[250px] p-4 bg-zinc-800 rounded-lg">
                        <div class="w-full h-52 rounded-mg bg-zinc-700 overflow-hidden">
                            <img class="w-full h-full object-cover object-center" src="<%= user.image %>" alt="">
                        </div>
                        <h3 class="text-xl tracking-tighter mt-3"><%= user.name %></h3>
                        <h5 class="text-zinc-500 "><%= user.email %></h5>
                        <div class="flex gap-2 mt-3">
                            <a class="text-zinc-600 " href="/edit/<%= user._id %>">Edit User</a>
                            <a class="text-red-500 " href="/delete/<%= user._id %>">Delete User</a>
                        </div>
                    </div>
               <% }) %>

            <% } else { %>
                        <h3 class="text-zinc-500">No users yet</h3>
            <% } %>

            

        </div>
        
    </div>

    <script src="/javascripts/"></script>
</body>
</html>